
<div class="col-md-4">
	<h1>All Wikis</h1>
</div>

<div class="col-md-8" style="margin-top:1.5em;">
    <%= link_to "New Wiki", new_wikii_path, class: 'btn btn-success' %>
</div>

<div class="row">
   <div class="col-md-8">
		<% @wikiis.each do |wiki| %>
			<% if current_user %>
				<% if !wiki.private || wiki.user_id == current_user.id%>
					<div class="media">
				     	<div class="media-body">
				   			<h4 class="media-heading">
				     			<%= link_to wiki.title, wikii_path(wiki) %>
				   			</h4>
				     	</div>
			   		</div>
		   		<% elsif !wiki.collaborators.empty? %>
		   			<% wiki.collaborators.each do |collaborator| %>
			   			<% if collaborator.user_id == current_user.id %>
				   			<div class="media">
						     	<div class="media-body">
						   			<h4 class="media-heading">
						     			<%= link_to wiki.title, wikii_path(wiki) %>
						   			</h4>
						     	</div>
					   		</div>
			   			<% end %>
			   		<% end %>
		   		<% end %>
			<% else %>
				<% unless wiki.private == true%>
					<div class="media">
				     	<div class="media-body">
				   			<h4 class="media-heading">
				     			<%= link_to wiki.title, wikii_path(wiki) %>
				   			</h4>
				     	</div>
			   		</div>
		   		<% end %>
			<% end %>
		<% end %>
   </div>
</div>





