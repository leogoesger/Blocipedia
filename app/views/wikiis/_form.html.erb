  <%= form_for wikii do |f| %>
    <% if wikii.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(wikii.errors.count, "error") %>.</h4>
        <ul>
          <% wikii.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_group_tag(wikii.errors[:title]) do %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter wikii title" %>
    <% end %>

    <%= form_group_tag(wikii.errors[:body]) do %>
      <%= f.label :body %>
      <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wikii description" %>
    <% end %>

  <% if current_user.role == "premium"%>
    <div class="checkbox form-group">
      <%= form_group_tag(wikii.errors[:private]) do %>
        <%= f.label :private, class: 'checkbox' do %>
          <%= f.check_box :private, {:checked=>false} %> Private
        <% end %>
      <% end %>
    </div>
  <% end %>

  <%= f.submit "Save", class: 'btn btn-success' %>
  <% end %>

<% if current_user.role == "premium"%>
  <%= form_for @collaborator, :url => collaborators_create_path(:id => wikii.id), :html => {:method => :post} do |k| %>
      <%= form_group_tag(@collaborator.errors[:UserName]) do %>
        <%= k.label "Add Collaborator's Name" %>
        <%= k.text_area :UserName, rows: 1, class: 'form-control', placeholder: "Enter collaborator name" %>
      <% end %>
      <%= k.submit "Save", class: 'btn btn-success' %>
  <% end %>
<% end %>
